<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Add Deposit Type</title>
	</head>
	<body>
		<h1>Add Deposit Type</h1>
		<form action="/deposit/addDepositType" method="post" id="depositTypeForm">
			<label for="depositTypeName">Deposit Type Name:</label>
			<input
				type="text"
				id="depositTypeName"
				name="depositTypeName"
				required
			/><br /><br />

			<button type="submit">Add Deposit Type</button>
		</form>
		<script>
			document
				.getElementById("depositTypeForm")
				.addEventListener("submit", function (event) {
					event.preventDefault();

					var depositData = {
						depositTypeName: document.getElementById("depositTypeName").value,
					};

					fetch("/deposit/addDepositType", {
						method: "POST",
						headers: { "Content-Type": "application/json" },
						body: JSON.stringify(depositData),
					})
						.then((response) => response.json())
						.then((data) => {
							alert(data.message || data.error);
						})
						.catch((error) => console.log("Error: ", error));
				});
		</script>
	</body>
</html>
