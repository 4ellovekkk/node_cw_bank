<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Deposit Conditions</title>
		<style>
			table {
				border-collapse: collapse;
				width: 100%;
			}
			th,
			td {
				border: 1px solid black;
				padding: 8px;
				text-align: left;
			}
			th {
				background-color: #f2f2f2;
			}
			tr:nth-child(even) {
				background-color: #f2f2f2;
			}
		</style>
	</head>
	<body>
		<h1>Deposit Conditions</h1>
		<table>
			<thead>
				<tr>
					<th>Deposit Name</th>
					<th>Deposit Type Name</th>
					<th>Currency</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% depositConditions.forEach((deposit) => { %>
				<tr>
					<td><%= deposit.deposit_condition_name %></td>
					<td><%= deposit.deposit_types.deposit_type_name %></td>
					<td><%= deposit.currency %></td>
					<td><button>Take</button></td>
				</tr>
				<% }); %>
			</tbody>
		</table>
		<script>
			// Функция для отправки данных на сервер
			async function sendData(depositData) {
				try {
					const response = await fetch("/deposit/take-deposit", {
						method: "POST",
						headers: {
							"Content-Type": "application/json",
						},
						body: JSON.stringify(depositData),
					});

					const responseData = await response.json();
					console.log(responseData);
					// Здесь можно обрабатывать ответ от сервера
				} catch (error) {
					console.error("Error:", error);
				}
			}

			// Находим все кнопки на странице
			const buttons = document.querySelectorAll("button");

			// Для каждой кнопки добавляем обработчик события клика
			buttons.forEach((button) => {
				button.addEventListener("click", async () => {
					// Находим строку таблицы, в которой находится кнопка
					const row = button.closest("tr");

					// Получаем данные из ячеек строки таблицы
					const depositName = row.cells[0].textContent;
					const depositTypeName = row.cells[1].textContent;
					const maxSum = row.cells[2].textContent;
					const currency = row.cells[3].textContent;

					// Формируем объект с данными
					const depositData = {
						depositConditionName: depositName,
						depositTypeName,
						maxSum,
						currency,
					};

					// Отправляем данные на сервер
					await sendData(depositData);
				});
			});
		</script>
	</body>
</html>
