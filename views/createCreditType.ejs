<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Add Credit Type</title>
	</head>
	<body>
		<h1>Add Credit Type</h1>
		<form action="/addCreditType" method="post" id="creditTypeForm">
			<label for="creditTypeName">Credit Type Name:</label>
			<input
				type="text"
				id="creditTypeName"
				name="creditTypeName"
				required
			/><br /><br />

			<button type="submit">Add Credit Type</button>
		</form>
		<script>
			document
				.getElementById("creditTypeForm")
				.addEventListener("submit", function (event) {
					event.preventDefault();

					var userData = {
						creditTypeName: document.getElementById("creditTypeName").value,
					};

					fetch("/credit/addCreditType", {
						method: "POST",
						headers: { "Content-Type": "application/json" },
						body: JSON.stringify(userData),
					})
						.then((response) => response.json())
						.then((data) => {
							alert(data.message || data.error);
						})
						.catch((error) => console.log("Error: ", error));
				});
		</script>
	</body>
</html>
