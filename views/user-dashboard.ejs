<!DOCTYPE html>
<html lang="en">
<head>
	<title>User dashboard</title>
	<script src="/socket.io/socket.io.js"></script>
</head>
<body>
<h1>User Page</h1>
<div>
	<a href="/chat/user">chat</a>
	<br>
	<a href="/credit/open-credit">Take Credit</a>
	<br>
	<a href="/credit/my-credits">List active credits</a>
	<br>
	<a href="/account/transfer-money">Transfer Money</a>
	<br>
	<a href="/deposit/open-deposit">Open Deposit</a>
	<br>
	<a href="/users/edit-user">Edit personal info</a>
	<br>
	<a href="/account/fill">Refill account</a>
	<br>
	<a href="/deposit/my-deposits">List active deposits</a>
	<br>
	<a href="/auth/logout">LOGOUT</a>
	<br>
	<% if (currentDate && nextPaymentDate) { %>
		<p>Current Date: <%= currentDate %></p>
		<p>Next Payment Date: <%= nextPaymentDate %></p>
	<% } else { %>
		<p>No data available</p>
	<% } %>
</div>
<script>
	const socket = io();
	socket.emit("register", "user");

	socket.on("notification", (data) => {
		alert(data.message);
	});
</script>
</body>
</html>
